{{#partial "styles"}}
    <link rel="stylesheet" href="/css/animal-form.css">
    <link rel="stylesheet" href="/css/index.css">
{{/partial}}
{{#partial "content"}}
    <div class=" ">

        <div class="row">
            {{#each sightings}}
                <div class="card ml-5" style="width: 18rem;">

                    <div class="card-body">
                        <h5 class="card-title">Tracking animal <i>{{name}}</i> </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Animal: </strong>{{name}}</li>
                        <li class="list-group-item"><strong>Ranger Name: </strong>{{rangerName}}</li>
                        <li class="list-group-item"><strong>Location: </strong>{{location}}</li>
                        <li class="list-group-item"><strong>Health: </strong>{{health}}</li>
                        <li class="list-group-item"><strong>Type: </strong>{{type}}</li>
                        <li class="list-group-item"><strong>Posted: </strong>{{lastSeen}}</li>
                    </ul>
                </div>
            {{/each}}
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}

